{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "spellcheck"
  ],
  "rules": {
    "spellcheck/spell-checker": [
      2,
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "lang": "en_GB",
        "skipWords": [
          "nangle",
          "goodreads",
          "graphql",
          "color",
          "beinn",
          "chuirn",
          "ama",
          "dablam",
          "gatsby"
        ]
      }
    ]
  }
}
